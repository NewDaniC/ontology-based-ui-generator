@base <http://www.cedri.com/SmartLEM-WeatherGraph-View#> .

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix ui: <http://www.cedri.com/OntologyToUI-UserInterface#> .
@prefix EC_Operations: <http://www.cedri.com/SmartLEM-EC-Operations#> .
@prefix Weather: <http://www.cedri.com/SmartLEM-Weather#> .

@prefix view: <http://www.cedri.com/SmartLEM-WeatherGraph-View#> .

<http://www.cedri.com/SmartLEM-WeatherGraph-View> rdf:type owl:Ontology ;
    owl:versionIRI <http://www.cedri.com/SmartLEM-WeatherGraph-View/1.0.0> ;
    owl:imports <http://www.cedri.com/OntologyToUI-UserInterface/1.0.0> ,
                <http://www.cedri.com/SmartLEM-EC-Operations/1.0.0> ,
                <http://www.cedri.com/SmartLEM-Weather/1.0.0> ;
    <http://purl.org/dc/terms/description> "View ontology for displaying weather data graphs." ;
    <http://purl.org/dc/terms/issued> "2025-02-05" .

#################################################################
#    UI Elements
#################################################################

# Page Title
view:PageTitle rdf:type ui:Title ;
    ui:hasText "Weather Data Visualization" ;
    ui:hasLevel 1 ;
    ui:order 1 .

# Description paragraph
view:Description rdf:type ui:Paragraph ;
    ui:hasText "This view displays weather data for the selected Energy Community. Enter the Energy Community ID and click 'Load Data' to visualize temperature, wind speed, and cloud cover over time." ;
    ui:order 2 .

# Weather Line Plot - Temperature, Wind Speed, and Cloud Cover
view:WeatherLinePlot rdf:type ui:LinePlot ;
    ui:hasTitle "Weather Conditions for Community" ;
    ui:hasBusinessModel EC_Operations:GetWeather ;
    ui:hasIndependentMetadata Weather:Timestamp_R ;
    ui:hasDependentMetadata Weather:Temperature2m_R ,
                             Weather:Windspeed_R ,
                             Weather:Cloudcover_R ;
    ui:hasSeriesAlias "Temperature2m_R=Temperatura (Â°C)" ,
                      "Windspeed_R=Wind Speed (km/h)" ,
                      "Cloudcover_R=Cloud Cover (%)" ;
    ui:hasXAxisLabel "Timestamp" ;
    ui:hasYAxisLabel "Value" ;
    ui:hasLegendPosition "bottom" ;
    ui:order 3 .
