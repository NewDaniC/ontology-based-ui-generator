view:PageTitle rdf:type ui:Title ;
    ui:hasText "Create Energy Community" ;
    ui:hasLevel 1 ;
    ui:order 1 .

view:DescriptionParagraph rdf:type ui:Paragraph ;
    ui:hasText "Use this form to create a new Energy Community, which operates as a Local Electricity Market. Fill in the community name, geographic coordinates (Latitude and Longitude), the Time of Use rate (TOU), and the Feed-in Tariff (FIT)." ;
